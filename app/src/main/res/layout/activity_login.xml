<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="24dp"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/creamy_peach"
        android:translationZ="6dp"
        android:animateLayoutChanges="true"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/loginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login to MealMate"
                android:textSize="32sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:endIconTint="@color/primary"
                android:layout_marginTop="24dp"
                android:hint="Enter Email / Username"
                app:hintTextColor="@color/cinnamon_spice"
                app:boxStrokeColor="@color/text_primary"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:startIconDrawable="@drawable/baseline_person_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:paddingStart="50dp"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:endIconTint="#000000"
                android:layout_marginTop="16dp"
                android:hint="Enter Password"
                app:hintTextColor="#000000"
                app:boxStrokeColor="@color/cinnamon_spice"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:startIconDrawable="@drawable/baseline_password_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:paddingStart="50dp"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="12dp">

                <CheckBox
                    android:id="@+id/rememberMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Remember me"
                    android:textSize="16sp"
                    android:textColor="@color/favorite_border"
                    android:buttonTint="@color/amber_glow"/>
            </LinearLayout>

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="@color/favorite_border"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_gravity="end"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Login"
                android:backgroundTint="@color/primary"
                android:textColor="@color/text_on_primary"
                android:layout_marginTop="24dp"
                app:cornerRadius="12dp"
                android:elevation="4dp"/>

            <TextView
                android:id="@+id/orDivider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/google_signin_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Sign in with Google"
                android:backgroundTint="@color/creamy_peach"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_map"
                app:cornerRadius="12dp"
                android:drawablePadding="12dp"
                app:strokeWidth="1dp"
                android:elevation="2dp"
                android:drawableTint="@color/text_primary"
                app:iconSize="24dp"
                android:paddingStart="16dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="#333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign Up"
            android:textStyle="bold"
            android:textColor="#003AE7"
            android:textSize="18sp"/>

    </LinearLayout>
</LinearLayout>