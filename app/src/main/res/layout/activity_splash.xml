<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background"
    android:gravity="center"
    tools:context=".SplashActivity">

    <!-- Logo -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/splash_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mlogo3"
        android:contentDescription="MealMate Logo"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"/>

    <!-- App Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MealMate"
        android:textSize="36sp"
        android:textColor="@color/text_on_primary"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_below="@id/splash_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"/>

    <!-- ProgressBar (Replaces Get Started Button) -->
    <ProgressBar
        android:id="@+id/splash_progress_bar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/text_on_primary"
        android:elevation="4dp"/>
</RelativeLayout>